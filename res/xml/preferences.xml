<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
	<PreferenceCategory android:title="SMS">	
       <EditTextPreference
			android:name="@string/aj_tarifaSMS"
			android:summary="@string/aj_tarifaSMS_des"
			android:defaultValue="9"
			android:inputType="phone"
			android:title="@string/aj_tarifaSMS"
			android:key="txtTarifaSMS" />
		<EditTextPreference
			android:name="@string/aj_SMSGratis"
			android:summary="@string/aj_SMSGratis_des"
			android:defaultValue="0"
			android:inputType="phone"
			android:title="@string/aj_SMSGratis"
			android:key="txtSMSGratis" />	
	</PreferenceCategory>
	<PreferenceCategory android:title="Presentación de datos">
		<ListPreference
            android:title="@string/aj_mes"
            android:summary="@string/aj_mes_des"
            android:key="listMes"
            android:defaultValue="1"
            android:entries="@array/listaMeses"
            android:entryValues="@array/valoresMeses"
            android:dialogTitle="MESES" />
            
		<EditTextPreference
			android:name="@string/aj_duracion"
			android:summary="@string/aj_duracion_des"
			android:defaultValue="0"
			android:inputType="phone"
			android:title="@string/aj_duracion"
			android:key="txtDuracion" />
			
		<CheckBoxPreference
            android:key="chbox_establecimiento"
            android:title="@string/aj_establecimiento"
            android:summary="@string/aj_establecimiento_des" 
            android:defaultValue="false"/>
            
       	<CheckBoxPreference
            android:key="chbox_nombreAgenda"
            android:title="@string/aj_nombreAgenda"
            android:summary="@string/aj_nombreAgenda_des" 
            android:defaultValue="true"/>
            
         <CheckBoxPreference
            android:key="chbox_resumenDia"
            android:title="@string/aj_resumenDia"
            android:summary="@string/aj_resumenDia_des" 
            android:defaultValue="true"/>    
           
        <CheckBoxPreference
            android:key="chbox_presentarIVA"
            android:title="@string/aj_presentarIVA"
            android:summary="@string/aj_presentarIVA_des" 
            android:defaultValue="true"/>
            
        <EditTextPreference
			android:name="@string/aj_decimales"
			android:summary="@string/aj_decimales_des"
			android:defaultValue="2"
			android:numeric="integer"
			android:inputType="phone"
			android:title="@string/aj_decimales"
			android:key="txtDecimales" />
			
	</PreferenceCategory>
	<PreferenceCategory android:title="Facturación">
	   <EditTextPreference
			android:name="@string/aj_inicioMes"
			android:summary="@string/aj_inicio_mes"
			android:defaultValue="1"
			android:numeric="integer"
			android:inputType="phone"
			android:title="@string/aj_inicioMes"
			android:key="txtInicioMes" />
	   <EditTextPreference
			android:name="@string/aj_impuestos"
			android:summary="@string/aj_impuestos_des"
			android:defaultValue="18"
			android:inputType="phone"
			android:title="@string/aj_impuestos"
			android:key="txtImpuestos" />
       <EditTextPreference
			android:name="@string/aj_descuento"
			android:summary="@string/aj_descuento_des"
			android:defaultValue="0"
			android:inputType="phone"
			android:title="@string/aj_descuento"
			android:key="txtDescuento" />
		<EditTextPreference
			android:name="@string/aj_cuota"
			android:summary="@string/aj_cuota_des"
			android:defaultValue="0"
			android:inputType="phone"
			android:title="@string/aj_cuota"
			android:key="txtCuota" />
		<EditTextPreference
			android:name="@string/aj_tarifaPlana"
			android:summary="@string/aj_tarifaPlana_des"
			android:defaultValue="0"
			android:inputType="phone"
			android:title="@string/aj_tarifaPlana"
			android:key="txtTarifaPlana" />
	</PreferenceCategory>
</PreferenceScreen>