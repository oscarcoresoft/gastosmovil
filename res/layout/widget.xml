<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
 android:orientation="vertical"
 android:layout_width="fill_parent"
 android:layout_height="fill_parent"
 android:id="@+id/widget"
 android:background="@drawable/btn_keyboard_key_trans_normal">

	<TextView android:id="@+id/txt_titulo"
 			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			
			android:background="#000000"
			android:textSize="9sp"
			android:textStyle="bold"
			android:text="@string/widget_titulo"
			android:gravity="center_horizontal"
		 	android:textColor="#ffffff"/>
		 	
	<TextView android:id="@+id/txt_numero"
 			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:textSize="10sp"
			android:text="XXXXXXXXX"
			android:gravity="center_horizontal"
		 	android:textColor="#ffffff"/>
			 	
		<TextView android:id="@+id/txt_duracion"
 			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:textSize="10sp"
			android:text="0m. 00s."
			android:gravity="center_horizontal"
		 	android:textColor="#ffffff"/>
		 	
	<TextView android:id="@+id/txt_fecha"
 			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:textSize="10sp"
			android:text="23/12 21:45"
			android:gravity="center_horizontal"
		 	android:textColor="#ffffff"/>
		 	
	<TextView android:id="@+id/txt_coste"
 			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:textSize="10sp"
			android:textStyle="bold"
			android:text="0.0000 â‚¬"
			android:gravity="center_horizontal"
		 	android:textColor="#ffffff"/>		 	
</LinearLayout>
