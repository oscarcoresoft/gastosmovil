<?xml version="1.0" encoding="utf-8"?>
 
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    
<TextView 
	android:id="@+id/cabResumen"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:text="@string/cabDatos"
    style="?android:attr/listSeparatorTextViewStyle"
    />

     <ScrollView android:id="@+id/ScrollView01"
 				android:layout_width="fill_parent" 
 				android:layout_below="@+id/ImageView01"
 				android:layout_height="75dp">
 				
	 	 <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	              android:id="@+id/lytResumen"
	              android:orientation="vertical"
	              android:layout_width="fill_parent"
	              android:layout_height="fill_parent"
	              android:padding="5dp"> 
	     </LinearLayout>
	         
       </ScrollView>     



<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="0dp">
    
    <TableRow>
    	<TextView android:id="@+id/txtMes"
            android:text="NOVIEMBRE"
            android:paddingRight="20dp"
            android:paddingLeft="10dp"
            android:textColor="#FFFFFF"/>
        <TextView />
        <ImageView android:id="@+id/llamadas"
			android:layout_width="24px"
			android:layout_height="24px"
			android:src="@android:drawable/stat_sys_phone_call" 
			android:padding="3dp" />
			
    	<TextView android:id="@+id/txtNumLlamadas"
            android:text="[000]"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:textColor="#888888"/>
            
    	<TextView android:id="@+id/txtCosteLlamadas"
            android:text="000.0 €"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:textColor="#AAAAAA"
            android:gravity="left" />
    </TableRow>
    <TableRow>
    	<TextView android:id="@+id/txtTotal"
            android:text="000.0 €"
            android:paddingRight="40dp"
            android:paddingLeft="30dp"
            android:textColor="#FFFFFF"
            android:gravity="center"/>
            
        <TextView />
        <ImageView android:id="@+id/sms"
			android:layout_width="24px"
			android:layout_height="24px"
			android:src="@android:drawable/ic_dialog_email" 
			android:padding="3dp" />
			
    	<TextView android:id="@+id/txtNumSMS"
            android:text="[000]"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:textColor="#888888"/>
            
    	<TextView android:id="@+id/txtCosteSMS"
            android:text="000.0 €"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:textColor="#AAAAAA"
            android:gravity="left"/>
    </TableRow>
</TableLayout>

<TextView  android:id="@+id/cabRegistros"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:text="@string/cabRegistros"
    style="?android:attr/listSeparatorTextViewStyle"
    />
    
<ListView 
		android:id="@android:id/list"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"/>

<TextView 
		android:id="@android:id/empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lista_vacia"/>
        
</LinearLayout>